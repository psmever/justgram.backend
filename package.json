{
    "name": "justgram.backend",
    "version": "1.0.0",
    "main": "src/app.ts",
    "repository": "https://github.com/psmever/justgram.backend.git",
    "author": "psmever <psmever@gmail.com>",
    "license": "MIT",
    "scripts": {
        "startbak": "nodemon src/app.ts",
        "start": "cp cfg/local.env .env && nodemon --exec ts-node -r tsconfig-paths/register --files src/app.ts -e ts",
        "start:server": "node build/app.js",
        "build": "yarn clear-build && yarn build-src",
        "build:start": "yarn build && yarn start",
        "clear-build": "rm build -r || true",
        "build-src": "tsc -p ."
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.9",
        "@types/webpack": "^4.41.25",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "nodemon": "^2.0.6",
        "prettier": "^1.19.1",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,json,css,md}": [
            "eslint --fix",
            "prettier --single-quote --write"
        ]
    }
}
