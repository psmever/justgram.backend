{
    "name": "justgram.backend",
    "version": "1.0.0",
    "main": "./src/app.ts",
    "repository": "https://github.com/psmever/justgram.backend.git",
    "author": "psmever <psmever@gmail.com>",
    "license": "MIT",
    "config": {
        "ionic_source_map_type": "source-map",
        "ionic_webpack": "./config/webpack.config.js"
    },
    "scripts": {
        "start": "cp cfg/local.env .env && nodemon --exec ts-node -r tsconfig-paths/register --files src/app.ts -e ts",
        "server:test": "cp cfg/local.env .env && node public/index.js",
        "build": "yarn build:clear && yarn build:src",
        "build:start": "yarn build:clear && yarn build && yarn start",
        "build:clear": "rm -rf public || true",
        "build:src": "webpack --config ./webpack.config.js",
        "build:tsc": "tsc -p .",
        "build:test": "cp cfg/local.env .env && yarn build:clear && yarn build:src && yarn server:test"
    },
    "dependencies": {
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.8",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mysql": "^2.15.16",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.4",
        "@types/passport-jwt": "^3.0.3",
        "@types/pug": "^2.0.4",
        "@types/sequelize": "^4.28.9",
        "@types/uuid": "^8.3.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "eslint-loader": "^4.0.2",
        "express": "^4.17.1",
        "html-webpack-plugin": "^4.5.0",
        "jsonwebtoken": "^8.5.1",
        "mariadb": "^2.5.2",
        "mysql2": "^2.2.5",
        "nodemailer": "^6.4.17",
        "passport": "^0.4.1",
        "passport-jwt": "^4.0.0",
        "pug": "^3.0.0",
        "sequelize": "^6.3.5",
        "ts-loader": "^8.0.11",
        "uuid": "^8.3.1",
        "webpack": "^5.10.0",
        "webpack-node-externals": "^2.5.2",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/node": "^14.14.10",
        "@types/webpack": "^4.41.25",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "copy-webpack-plugin": "^7.0.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "nodemon": "^2.0.6",
        "prettier": "^1.19.1",
        "ts-node": "^9.1.0",
        "tsconfig-paths": "^3.9.0",
        "tslint": "^6.1.3",
        "typescript": "^4.1.2",
        "webpack-cli": "^4.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,json,css,md}": [
            "eslint --fix",
            "prettier --single-quote --write"
        ]
    }
}
